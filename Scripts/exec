#!/bin/bash
. ~/.History/Functions/Funciones

array=('Seleccionar Histórico' 'Gestión de Históricos' 'Información' 'Salir')
opcion=$(zenity --entry --title "MHIST" --text "Seleccione una opción." "${array[@]}")

if [ "$opcion" == "Seleccionar Histórico" ]; then
    #Cambiar HISTFILE
    ElegirHistorico
        if [ $hist != "" ]; then
            SeleccionarHistorico ${HOME}/.History/Histories/${dir}/${hist}
        else
            zenity --info --text="Operación cancelada."
            . ${HOME}/.History/Scripts/exec
        fi
elif [ "$opcion" == "Gestión de Históricos" ]; then
    #Gestión históricos
    . ${HOME}/.History/Scripts/manage
elif [ "$opcion" == "Información" ]; then
    #Estadísticas
    . ${HOME}/.History/Scripts/info
elif [ "$opcion" == "Salir" ] || [ "$opcion" == "" ]; then
    #Salir
    zenity --info --text="Hasta pronto."
    #Hay que comprobar si tiene el historico por defecto 
    #para pedirle al acabar si quiere guardarlo como uno nuevo.
fi