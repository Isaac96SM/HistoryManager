#!/bin/bash

array=('Nuevo Histórico' 'Guardar Histórico' 'Eliminar Históricos' 'Desglosar Histórico' 'Fusionar Históricos' 'Volver')
opcion=$(zenity --entry --title "Gestión de Históricos" --text "Seleccione una opción." "${array[@]}")

if [ "$opcion" == "Nuevo Histórico" ]; then
    #Nuevo Histórico
    echo 'Nuevo'
elif [ "$opcion" == "Guardar Histórico" ]; then
    #Guardar Histórico activo (solo si no esta guardado ya)
    echo 'Guardar'
elif [ "$opcion" == "Eiminar Históricos" ]; then
    #Eiminar Históricos
    echo 'Eliminar'
elif [ "$opcion" == "Desglosar Histórico" ]; then
    #Desglosar por orden
    echo 'Desglosar'
elif [ "$opcion" == "Fusionar Histórico" ]; then
    #Fusionar Históricos
    echo 'Fusionar'
elif [ "$opcion" == "Volver" ] || [ "$opcion" == "" ]; then
    #Volver al menú principal
    . ~/.History/Scripts/exec
fi